@model List<HamburguesasTienda.Models.Producto>

@{
    ViewData["Title"] = "Men√∫ de Hamburguesas";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var productos = Model.Take(12).ToList(); // Solo 12 productos
    var categorias = productos.Select(p => p.Categoria).Distinct().ToList();
}

<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease-in-out;
    }

    .precio {
        font-size: 1.2rem;
        color: #28a745;
    }

    .estrellas i {
        color: gold;
        font-size: 1rem;
    }

    .banner-horizontal {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }
</style>

<div class="container mt-5" data-aos="fade-up">
    <h2 class="text-center mb-4 display-5">üçî Nuestro Men√∫ Exclusivo</h2>
    <p class="text-center text-muted mb-4">Elige entre nuestras hamburguesas m√°s populares.</p>

    <!-- Filtro -->
    <div class="text-center mb-4">
        <select class="form-select w-auto mx-auto" id="filtroCategoria">
            <option value="Todas">üçΩÔ∏è Todas las categor√≠as</option>
            @foreach (var categoria in categorias)
            {
                <option value="@categoria">@categoria</option>
            }
        </select>
    </div>

    <!-- Cards de productos -->
    <div class="row row-cols-1 row-cols-md-3 g-4" id="productosContainer">
        @for (int i = 0; i < productos.Count; i++)
        {
            var item = productos[i];

            <div class="col producto-card" data-categoria="@item.Categoria" data-aos="zoom-in">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <img src="@item.ImagenUrl" class="card-img-top rounded-top-4" alt="@item.Nombre" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text text-muted">@item.Descripcion</p>

                        
 
                        <!-- Estrellas -->
                        <div class="estrellas mb-2">
                            @for (int star = 1; star <= 5; star++)
                            {
                                if (star <= item.Valoracion)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        </div>

                        <p class="precio fw-bold">$@item.Precio.ToString("0.00")</p>

                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="mt-auto">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-cart-plus me-1"></i> Agregar al carrito
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Imagen horizontal cada 3 productos -->
            @if ((i + 1) % 3 == 0 && i < productos.Count - 1)
            {
                <div class="col-12 my-4 text-center" data-aos="fade-left">
                    <img src="~/images/banner-combo.jpg" class="banner-horizontal" alt="Combo Especial" />
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>AOS.init();</script>

    <script>
        document.getElementById('filtroCategoria').addEventListener('change', function () {
            const seleccionada = this.value;
            const tarjetas = document.querySelectorAll('.producto-card');
            tarjetas.forEach(card => {
                const cat = card.getAttribute('data-categoria');
                card.style.display = (seleccionada === "Todas" || cat === seleccionada) ? "block" : "none";
            });
        });
    </script>
}
