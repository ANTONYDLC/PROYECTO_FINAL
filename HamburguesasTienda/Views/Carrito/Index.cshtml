@model List<HamburguesasApp.Models.Producto>
@{
    ViewData["Title"] = "Tu carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal total = 0;
    foreach (var item in Model)
    {
        total += item.Precio;
    }
}

<div class="container mt-5" data-aos="fade-up">
    <h2 class="text-center mb-4">ðŸ›’ Tu Carrito de Hamburguesas</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Â¡Tu carrito estÃ¡ vacÃ­o! Agrega algunas hamburguesas deliciosas.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model)
                {
                    <div class="card mb-3" data-aos="fade-right">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@item.ImagenUrl" class="img-fluid rounded-start" alt="@item.Nombre">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <h5 class="card-title">@item.Nombre</h5>
                                    <p class="card-text">@item.Descripcion</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold text-success">$@item.Precio.ToString("0.00")</span>
                                        <form asp-controller="Carrito" asp-action="Eliminar" method="post">
                                            <input type="hidden" name="idProducto" value="@item.Id" />
                                            <button class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash3"></i> Quitar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm bg-light p-3" data-aos="fade-left">
                    <h5 class="card-title text-center">Resumen del Pedido</h5>
                    <hr />
                    <p><strong>ArtÃ­culos:</strong> @Model.Count</p>
                    <p><strong>Total:</strong> $@total.ToString("0.00")</p>

                    <form asp-controller="Carrito" asp-action="Pagar" method="post">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-credit-card-2-front-fill"></i> Proceder al Pago
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>AOS.init();</script>
}
