@model List<HamburguesasTienda.Models.FakeProduct>

<h2>Productos desde Fake Store API</h2>
<div class="row">
    @foreach (var producto in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <img src="@producto.Image" class="card-img-top" alt="@producto.Title" style="height: 200px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title">@producto.Title</h5>
                    <p class="card-text">@producto.Description</p>
                    <p class="text-success fw-bold">$@producto.Price</p>
                </div>
            </div>
        </div>
    }
</div>
