@{
    var usuario = Context.Session.GetString("usuario");
    var esAdmin = Context.Session.GetString("esAdmin") == "True";
}

<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HamburguesasTienda</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <!-- AOS Animation -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    
    <style>
        body.dark-mode {
            background-color: #121212;
            color: #fff;
        }

        .navbar-dark-mode {
            background-color: #222 !important;
        }

        .card.bg-dark, .table.bg-dark {
            background-color: #1c1c1c !important;
            color: #fff;
        }

        .modo-toggle {
            cursor: pointer;
        }

        .avatar-icon {
            font-size: 1.2rem;
            margin-right: 4px;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-dark-mode shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Inicio">
                    <img src="~/images/log.png" alt="Logo" style="height: 90px;" class="me-2"> La Perucha 🍔
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="menuNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/Home/Inicio">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Producto/Index">Productos</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Carrito/Index">Carrito</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Contacto">Contacto</a></li>

                        @if (string.IsNullOrEmpty(usuario))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Cuenta/Login">Iniciar Sesión</a></li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle avatar-icon"></i>@usuario
                                </a>
                                <ul class="dropdown-menu">
                                    @if (esAdmin)
                                    {
                                        <li><a class="dropdown-item" href="/Admin/Panel"><i class="bi bi-gear me-1"></i>Admin</a></li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="/Cuenta/Logout"><i class="bi bi-box-arrow-right me-1"></i>Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Botón Modo Oscuro -->
                    <button id="modoBtn" class="btn btn-outline-light ms-2 modo-toggle">
                        <i class="bi bi-moon-stars"></i>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div>&copy; @DateTime.Now.Year - HamburguesasApp 🍔</div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();

        // Modo oscuro toggle
        const body = document.body;
        const modoBtn = document.getElementById('modoBtn');
        if (localStorage.getItem('dark-mode') === 'true') {
            body.classList.add('dark-mode');
        }

        modoBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            localStorage.setItem('dark-mode', body.classList.contains('dark-mode'));
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
