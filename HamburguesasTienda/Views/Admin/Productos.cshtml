@model List<HamburguesasTienda.Models.Producto>
@{
    ViewData["Title"] = "Gestión de Productos";
}
<h2>Gestión de Productos</h2>

<a class="btn btn-primary mb-3" asp-action="CrearProducto">Agregar Nuevo Producto</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>@producto.Categoria</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="EditarProducto" asp-route-id="@producto.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
