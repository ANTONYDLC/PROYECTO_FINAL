@model HamburguesasTienda.Models.EstadisticasViewModel
@{
    ViewData["Title"] = "Estadísticas";
}
<h2>Estadísticas de la Tienda</h2>

<div class="row">
    <div class="col-md-4">
        <div class="alert alert-info">
            <strong>Total Productos:</strong> @Model.TotalProductos
        </div>
    </div>
    <div class="col-md-4">
        <div class="alert alert-warning">
            <strong>Total Usuarios:</strong> @Model.TotalUsuarios
        </div>
    </div>
    <div class="col-md-4">
        <div class="alert alert-success">
            <strong>Ventas Totales:</strong> @Model.TotalVentas.ToString("C");
        </div>
    </div>
</div>
