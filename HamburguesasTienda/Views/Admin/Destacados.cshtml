@model List<HamburguesasTienda.Models.Producto>
@{
    ViewData["Title"] = "Productos Destacados";
}
<h2>Productos Destacados</h2>

<a class="btn btn-primary mb-3" asp-action="AgregarDestacado">Agregar Producto Destacado</a>

<ul class="list-group">
    @foreach (var p in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @p.Nombre
            <form asp-action="QuitarDestacado" asp-route-id="@p.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">Quitar</button>
            </form>
        </li>
    }
</ul>
