@{
    ViewData["Title"] = "Consulta del Clima";
}

<h2>Consulta del Clima</h2>

<form method="get" asp-controller="Home" asp-action="Clima">
    <input type="text" name="ciudad" placeholder="Escribe una ciudad..." required />
    <button type="submit">Consultar</button>
</form>

@if (ViewBag.Clima != null)
{
    <p><strong>Clima en @ViewBag.Ciudad:</strong> @ViewBag.Clima</p>
}
else if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
